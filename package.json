{
  "name": "resynced",
  "version": "0.0.3",
  "description": "Lets you create multiple synced state and use across multiple components using Hooks API instead of Context API.",
  "license": "MIT",
  "main": "dist/resynced.js",
  "typings": "dist/types/resynced.d.ts",
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "author": "Pedro Nasser <pedronasser@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com/pedronasser/resynced.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "rollup -c rollup.config.ts -w",
    "lint": "tslint -t codeFrame 'src/**/*.ts' '__tests__/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "prerelease": "yarn build"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "types.d.ts"
    ],
    "unmockedModulePathPatterns": [
      "react"
    ]
  },
  "dependencies": {
    "fast-deep-equal": "^2.0.1",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-test-renderer": "^16.7.0-alpha.0"
  },
  "peerDependencies": {
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/node": "^10.7.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/redux": "^3.6.0",
    "cross-env": "^5.0.1",
    "jest": "^22.0.2",
    "jest-enzyme": "^6.0.3",
    "prettier": "^1.13.4",
    "redux": "^4.0.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.59.2",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
